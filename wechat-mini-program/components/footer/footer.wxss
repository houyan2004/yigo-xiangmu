.footer{
  
  text-align: center;
  padding: 50rpx 0;
  background: #eee;
  color: #8e8e8e;
  border-top: 1px solid  #BDA066;
  font-size: 30rpx;
  line-height: 1.8em;
  
}
.kefu{
  width: 100rpx;
  height: 100rpx;
  background:#BDA066;
   position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  border-radius: 50%;
  z-index: 10;
 
  box-shadow: 0 0 20rpx rgba(189,160,102,0.8);
}
.kefu .btn{
     width: 100%;
     height: 100%;
     border-radius: 50%;
     position: relative;
     z-index: 2;
     opacity: 0;
 }
 .kefu .pic{
  width: 90%;
  height: 90%;
  margin: 5%;
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
 @keyframes  emit {
  0%{}
  100%{
    border-width: 1px;
    opacity: 0;
    transform: scale(1.5);
  }
}
.kefu .line{
    width: 90%;
    height: 90%;
    border: 3px solid#BDA066;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    animation: emit 3s infinite;
   
}