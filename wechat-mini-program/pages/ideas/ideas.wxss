/* pages/ideas/ideas.wxss */
.outs{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.out{
  width: 710rpx;
  height: 900rpx;
  background: rgb(250, 247, 247);
}
.out .title{
  padding: 20rpx;
  font-size: 50rpx;
}
.out .btns{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.out .conts{
  width: 710rpx;
  height: auto;
  border: 1rpx soldi red;
  margin-top: 30rpx;
}
.out .areas{
  height:352rpx;
  font-size: 30rpx;
  text-indent: 28rpx;
 
  padding-top: 30rpx;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
}
.out .currentWordNumber{
  font-size: 28rpx;
  color: gray;
  position: absolute;
  left: 480rpx;
  top: -6rpx;
}
.out .pics image{
  width: 165rpx;
  height: 165rpx;
}
.hint{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 710rpx;
  height: 100rpx;
  margin-top: 40rpx;
  background: rgb(245, 242, 242);
}
.sub{
  width: 710rpx;
  margin-top: 20rpx;
}
.active{
  border-bottom:3px solid red;
  transition:all .2s ease-in 0s;
}
 