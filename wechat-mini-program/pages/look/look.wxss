.history{
  padding: 30rpx;
}
.history .title{
  display: flex;
  justify-content: space-between;
  align-items:center;
  font-size: 30rpx;
  color:#666;
}
.history .title .text{
  font-size: 32rpx;
}
.history .title .remove{
  color: #999;
  display: flex;
  align-items: center;

}
.history .title .remove .font{
  padding-left: 5rpx;
}
.history .content{
  padding: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.history .content .item{
  background-color:#eee;
  color: #333333;
  font-size: 30rpx;
  padding: 0 25rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 5rpx;
}
.total{
  padding: 30rpx 30rpx 0;
  font-size: 28rpx;
  color: #666;
}
.total .text{
  color: rgb(194, 177, 177);
}
.order{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;

}
.order .box{
  display: flex;
  border: 1px solid red;
  width: 700rpx;
  margin-bottom: 20rpx;
}
.order .box .txt{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}
.order .box >image{
  width: 400rpx;
  height: 300rpx;
}
.nav2_box {
  background-color: rgba(204, 200, 200, 0.1);
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  min-height: 10rpx;
}

.nav2_box .item:nth-child(1) {
  margin-top: 10rpx;
}

.nav2_box .item {
  min-height: 250rpx;
  display: flex;
  margin: 40rpx 0;
   
}

.nav2_box .img {
  width: 320rpx;
  height: 214rpx;
  margin-right: 10rpx;
  opacity: 1;
  border-radius: 10px;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.5);
}
.nav2_box .img .pic {
  width: 100%;
  height: 100%;
   
}
.nav2_box .title {
  width: 100%;
  min-height: 250rpx;
  border-bottom: 2rpx solid #828;
  position: relative;
}

.nav2_box .text {
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 0px;
  color: rgba(0, 0, 0, 1);
}

.nav2_box .jiage {
  position: absolute;
  bottom: 2rpx;
  left: 0;
}

.nav2_box .gou {
  position: absolute;
  bottom: 10rpx;
  padding: 5rpx 10rpx;
  right: 0;
  height: 48rpx;
  opacity: 1;
  border-radius: 10rpx;
  background: rgba(255, 141, 26, 1);
}

.nav2_box .text {
  font-size: 36rpx;
  font-weight: 700;
  color: rgb(24, 21, 21);
}