/* pages/dish_1/dish1.wxss */
page {
  width: 100%;
  height: 100%;
  background: rgb(209, 209, 209);
}

.page {
  width: 100%;
  height: auto;
  position: relative;  /* 设置为relative，作为绝对定位的参考 */
}

.main {
  height: 100%;
  display: flex; /* 使用Flexbox布局 */
  flex-direction: column; /* 子元素垂直排列 */
}

.top {
  position: relative; /* 设置为relative，使其成为子元素绝对定位的参考 */
  top: 0; /* 定位到顶部 */
  left: 0; /* 定位到左侧 */
  width: 100%; /* 宽度为100% */
  height: 600rpx;
  z-index: 0; /* 设置z-index，确保它在top_son2之上 */
}

.top_son1 {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  position: absolute; /* 设置为absolute，使其脱离文档流 */
  top: 0; /* 定位到顶部 */
  left: 0; /* 定位到左侧 */
  z-index: 2; /* 设置z-index，确保它在top_son2之上 */
}
.top_son1 .top_son1_1{
  margin-top: 20rpx;
  margin-left: 20rpx;
  flex-basis: 80%;
  height: 70%;
  /* background-color: grey; */
}
.top_son1 .top_son1_2{
  margin-top: 15rpx;
  margin-right: 10rpx;
  flex-basis: 20%;
  height: 80%;
  /* background-color: grey; */
}
.top_son1 .top_son1_2 image{
  width: 130rpx;
  height: 52rpx;
}
.top_son2 {
  width: 100%;
  height: 100%;
  /* background-color: lightpink; */
  position: absolute; /* 设置为absolute，使其脱离文档流 */
  top: 0rpx;
  left: 0; /* 定位到左侧 */
  z-index: 1; /* 设置z-index，确保它在top_son1之下 */
}
.swiper-container {
  width: 100%;
  height: 100%;
  position: relative;
}
.swiper {
  width: 100%;
  height: 100%;
}
.swiper swiper-item{
  width: 100%;
  height: 100%;
}

.custom-indicator {
  position: absolute;
  bottom: 10px;
  right: 10px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 2px 8px;
  border-radius: 10px;
}
.botom{
  width: 100%;
  height: 800rpx;
  /* background-color: lightskyblue; */
}
.dish-info{
  background-color: white;
  margin-bottom: 4rpx;
}
.dish-name{
  font-size: 60rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.buy_Tan{
  /* background-color: hotpink; */
  width: 100%;
  height: 100%;
}

.share_Tan{
  width: 100%;
  height: 100%;

}
.share_Tan_Title{
  margin-top: 20rpx;
  font-size: 80rpx;
  text-align: center;
  width: 100%;
  height: 30%;
}
.share_Tan .share_Tan_Content{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: row;
}
.share_Tan .share_Tan_Content view{
  width: 50%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.food{
  text-align: center;
  border-radius: 20rpx;
  border: 4rpx solid rgba(34, 155, 93, 1);
  margin-left: 18rpx;
  margin-bottom: 18rpx;
}
